<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/greenMainBackground"
        tools:context=".SearchByDepartment">

    <com.google.android.material.button.MaterialButton
            android:text="Office"
            android:layout_height="64dp"
            android:layout_width="307dp"
            android:id="@+id/button"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="1000dp"
            app:strokeColor="@color/black"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" android:layout_marginTop="28dp"/>
    <com.google.android.material.button.MaterialButton
            android:text="Classrooms"
            android:layout_height="64dp"
            android:layout_width="307dp"
            android:id="@+id/button2"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="1000dp"
            app:strokeColor="@color/black"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" android:layout_marginTop="92dp"/>
    <com.google.android.material.button.MaterialButton
            android:text="Entrances / Exits"
            android:layout_height="64dp"
            android:layout_width="307dp"
            android:id="@+id/button3"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="1000dp"
            app:strokeColor="@color/black"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" android:layout_marginTop="156dp"/>
    <com.google.android.material.button.MaterialButton
            android:text="Parking Lots"
            android:layout_height="64dp"
            android:layout_width="307dp"
            android:id="@+id/button4"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="1000dp"
            app:strokeColor="@color/black"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" android:layout_marginTop="220dp"/>
    <com.google.android.material.button.MaterialButton
            android:text="Restrooms"
            android:layout_height="64dp"
            android:layout_width="307dp"
            android:id="@+id/button5"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="1000dp"
            app:strokeColor="@color/black"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" android:layout_marginTop="284dp"/>
    <com.google.android.material.button.MaterialButton
            android:text="Sports Facilities"
            android:layout_height="64dp"
            android:layout_width="307dp"
            android:id="@+id/button7"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="1000dp"
            app:strokeColor="@color/black"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" android:layout_marginTop="348dp"/>
    <TextView
            android:text="CURRENTLY SELECTING"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            android:textSize="15sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp" android:gravity="center"/>
    <TextView
            android:text="Search By Department"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView9"
            android:textSize="30sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/textView7" android:layout_marginTop="24dp"/>
    <TextView
            android:text="STARTING LOCATION"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            android:textSize="23sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="56dp" app:layout_constraintHorizontal_bias="0.498" android:textStyle="bold"
            android:gravity="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>