<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/greenMainBackground"
        tools:context=".MainActivity">
    <TextView
            android:text="Welcome to"
            android:layout_width="0dp"
            android:layout_height="46dp" android:id="@+id/textView2"
            android:textSize="30sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="108dp" app:layout_constraintHorizontal_bias="0.497" android:gravity="center"/>
    <TextView
            android:text="Temple City High School"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            android:textSize="30sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="152dp" android:gravity="center"/>
    <com.google.android.material.button.MaterialButton
            android:text="Starting Location"
            android:layout_height="64dp"
            android:layout_width="307dp"
            android:id="@+id/currentlocation"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="1000dp"
            app:strokeColor="@color/black"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="225dp"/>
    <com.google.android.material.button.MaterialButton
            android:text="Destination"
            android:layout_height="64dp"
            android:layout_width="307dp"
            android:id="@+id/btnRound2"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="1000dp"
            app:strokeColor="@color/black"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/currentlocation" android:layout_marginTop="12dp"/>
    <com.google.android.material.button.MaterialButton
            android:text="Begin Navigation"
            android:layout_height="64dp"
            android:layout_width="307dp"
            android:id="@+id/btnRound3"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="1000dp"
            app:strokeColor="@color/black"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="612dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="220dp"
            app:srcCompat="@drawable/white_transparent" android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="380dp"
            app:layout_constraintHorizontal_bias="0.504"/>

    <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:srcCompat="@drawable/ic_baseline_location_on_24" android:id="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/btnRound2" app:layout_constraintEnd_toEndOf="@+id/btnRound2"
            android:layout_marginTop="20dp" android:layout_marginEnd="20dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_baseline_my_location_24"
            android:id="@+id/imageView8"
            app:layout_constraintTop_toTopOf="@+id/currentlocation"
            app:layout_constraintEnd_toEndOf="@+id/currentlocation" android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>