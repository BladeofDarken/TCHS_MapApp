<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/greenMainBackground"
        tools:context=".CatagoryDepartments">

    <TextView
            android:text="CURRENTLY SELECTING"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            android:textSize="15sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp" android:gravity="center"/>
    <TextView
            android:text="STARTING LOCATION"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            android:textSize="23sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="56dp" app:layout_constraintHorizontal_bias="0.498" android:textStyle="bold"
            android:gravity="center"/>
    <TextView
            android:text="OR"
            android:layout_width="0dp"
            android:layout_height="46dp" android:id="@+id/textView5"
            android:textSize="30sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button8" android:layout_marginTop="24dp"
            app:layout_constraintBottom_toTopOf="@+id/button9" app:layout_constraintVertical_bias="0.0"
            android:gravity="center"/>
    <com.google.android.material.button.MaterialButton
            android:text="Search All"
            android:layout_height="64dp"
            android:layout_width="307dp"
            android:id="@+id/button8"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="1000dp"
            app:strokeColor="@color/black"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="112dp"/>
    <com.google.android.material.button.MaterialButton
            android:text="My Current Location"
            android:layout_height="64dp"
            android:layout_width="307dp"
            android:id="@+id/button9"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="1000dp"
            app:strokeColor="@color/black"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button8" android:layout_marginTop="92dp"/>
    <com.google.android.material.button.MaterialButton
            android:text="Popular Destinations"
            android:layout_height="64dp"
            android:layout_width="307dp"
            android:id="@+id/button10"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="1000dp"
            app:strokeColor="@color/black"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button9"/>
    <com.google.android.material.button.MaterialButton
            android:text="Search By Department"
            android:layout_height="64dp"
            android:layout_width="307dp"
            android:id="@+id/button11"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="1000dp"
            app:strokeColor="@color/black"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button10"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="220dp"
            app:srcCompat="@drawable/white_transparent" android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button11" app:layout_constraintVertical_bias="0.322"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_search_24" android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/button8" app:layout_constraintStart_toStartOf="@+id/button8"
            android:layout_marginTop="20dp" android:layout_marginStart="20dp"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_baseline_location_on_24" android:id="@+id/imageView6"
            app:layout_constraintTop_toTopOf="@+id/button9" app:layout_constraintStart_toStartOf="@+id/button9"
            android:layout_marginTop="16dp" android:layout_marginStart="12dp"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_baseline_location_on_24" android:id="@+id/imageView7"
            app:layout_constraintTop_toBottomOf="@+id/button9" app:layout_constraintStart_toStartOf="@+id/button10"
            android:layout_marginTop="16dp" android:layout_marginStart="12dp"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_baseline_location_on_24" android:id="@+id/imageView9"
            app:layout_constraintTop_toTopOf="@+id/button11" app:layout_constraintStart_toStartOf="@+id/button11"
            android:layout_marginTop="16dp" android:layout_marginStart="12dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>